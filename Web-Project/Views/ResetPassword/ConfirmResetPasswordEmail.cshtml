
@{
    Layout = null;
}

@model Web_Project.Models.ConfirmEmail
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        }

        .form-control {
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 form-container">
                <form  method="post">
                    <br />
                    <h6>@ViewBag.Email</h6>
                    <br />
                    <input type="hidden" class="form-control" asp-for="ID" value="@ViewBag.ID" style="height:1px;" readonly>
                    <br />
                    <p>E-posta adresinizin size ait olduğunu doğrulayarak güvenliğinizi sağlamamıza yardımcı olun. Hesabınıza onay kodunu içeren bir e-posta gönderildi. Lütfen o kodu aşşagıya girin:</p>
                    <hr>
                    <input type="text" class="form-control" asp-for="confirmcode" placeholder="Kodu buraya yazın!">
                    <button class="btn btn-primary" type="submit">Onayla</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>