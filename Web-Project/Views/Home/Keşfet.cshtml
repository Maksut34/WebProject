
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Karşılama Sayfası</title>
    <link rel="stylesheet" href="style.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .welcome-page {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-image: url('https://images.unsplash.com/photo-1519681393784-d120267933ba');
            background-size: cover;
            background-position: center;
            text-align: center;
            padding: 20px;
        }

            .welcome-page h1 {
                font-size: 3rem;
                color: #fff;
                text-shadow: 2px 2px #000;
                margin-bottom: 10px;
            }

            .welcome-page p {
                font-size: 1.5rem;
                color: #fff;
                text-shadow: 2px 2px #000;
                margin-bottom: 20px;
            }

            .welcome-page a {
                display: inline-block;
                padding: 10px 20px;
                font-size: 1.2rem;
                background-color: #333;
                color: #fff;
                border: none;
                border-radius: 5px;
                text-decoration: none;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .welcome-page a:hover {
                    background-color: #555;
                }
    </style>

</head>
<body>
    <div class="welcome-page">
        <h1>Hoş Geldiniz!</h1>
        <p>Bu sitede sizi harika hikayeler bekliyor.</p>
        <a href="Login/Login">Keşfet</a>
    </div>
</body>
</html>
